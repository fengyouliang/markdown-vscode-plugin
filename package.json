{
  "name": "md-auto-preview",
  "displayName": "Markdown Editor (Editor / Split / Preview)",
  "description": "在 VS Code 中将 Markdown 以 Custom Editor 打开：同一标签页内提供 Editor / Split / Preview 三态，并按工作区记住上次选择。",
  "version": "1.0.0",
  "publisher": "local",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:mdAutoPreview.markdownEditor"
  ],
  "main": "./dist/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true,
      "description": "该扩展仅在本地渲染 Markdown 并提供自定义编辑器 UI，不执行外部命令、不上传用户内容，可安全运行于受限工作区。"
    }
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "mdAutoPreview.markdownEditor",
        "displayName": "Markdown Editor (Editor / Split / Preview)",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "vscode:prepublish": "npm run compile"
  },
  "dependencies": {
    "markdown-it": "^14.1.0",
    "mermaid": "^10.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/markdown-it": "^14.1.2",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.6.3"
  }
}
